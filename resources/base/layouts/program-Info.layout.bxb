layout {
	match : ProgramInfo(programInfo)
	mode (Details)
	
	content{
		section{
			content{
				image{
					aspect-ratio(1:1)
					object-fit (Contain)
					url("#{value(programInfo.programImageUrl)}")
				}
			}
		}
		section{
			title(소개)
			content{
				paragraph{
					value("#{value(programInfo.programIntro)}")
					style(Detail_L)
				}
			}
		}
		section{
			title(출연진)
			content{
				partitioned{
					content{
						paragraph{
							value("#{value(programInfo.programCast)}")
							style(Detail_L)
						}
					}
				}
			}
		}
		section{
			title(편성)
			content{
				partitioned{
					content{
						paragraph{
							value("#{value(programInfo.programTime)}")
							style(Detail_L)
						}
					}
				}
			}
		}
		section{
			title(제작진)
			content{
				partitioned{
					content{
						paragraph{
							value("#{value(programInfo.programStaff)}")
							style(Detail_L)
						}
					}
				}
			}
		}
	}
}
